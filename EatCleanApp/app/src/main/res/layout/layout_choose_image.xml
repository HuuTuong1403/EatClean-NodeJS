<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    app:cardCornerRadius="30dp"
    android:elevation="30dp"
    android:layout_marginTop="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn hình thức thêm ảnh"
            android:textAllCaps="true"
            android:fontFamily="@font/robotomonobold"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_chooseImage_Camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chụp ảnh"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="15dp"
            android:textSize="16sp"
            android:background="@drawable/custom_button"
            android:textColor="@color/custom_color_text"
            android:backgroundTint="@color/bg_nav"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_chooseImage_Media"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn ảnh từ thư viện"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="15dp"
            android:textSize="16sp"
            android:background="@drawable/custom_button"
            android:textColor="@color/custom_color_text"
            android:backgroundTint="@color/bg_nav"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_chooseImage_Cancel"
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="Hủy"
            android:textSize="16sp"
            android:textColor="@color/custom_color_text"
            android:background="@drawable/custom_button"
            android:backgroundTint="@color/bg_nav"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>